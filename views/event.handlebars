<section class="page-title">
    <div class="color-one"></div>
    <div class="color-two"></div>
    <div class="color-three"></div>
    <div class="color-four"></div>
    <div class="auto-container">
        <h2>{{event.title}}</h2>
        <ul class="bread-crumb clearfix">
            <li><a href="/"><i class="flaticon-home"></i> Home</a></li>
            <li>{{event.title}}</li>
        </ul>
    </div>
    <!--Waves Container-->
    <div>
        <svg class="waves" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
            viewBox="0 24 150 28" preserveAspectRatio="none" shape-rendering="auto">
            <defs>
                <path id="gentle-wave" d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z" />
            </defs>
            <g class="parallaxx">
                <use xlink:href="#gentle-wave" x="148" y="0" fill="rgba(255,255,255,0.7" />
                <use xlink:href="#gentle-wave" x="100" y="3" fill="rgba(255,255,255,0.5)" />
                <use xlink:href="#gentle-wave" x="70" y="5" fill="rgba(255,255,255,0.3)" />
                <use xlink:href="#gentle-wave" x="48" y="7" fill="#fff" />
            </g>
        </svg>
    </div>
    <!--Waves end-->
</section>
<!-- End Page Title -->

<!-- Sidebar Page Container -->
<div class="sidebar-page-container">
    <div class="auto-container">
        <div class="row clearfix">

            <!-- Content Side -->
            <div class="content-side col-lg-8 col-md-12 col-sm-12">
                <div class="blog-detail">
                    <div class="blog-detail_inner">
                        <div class="blog-detail_image">
                            <img src="{{event.bannerImg}}" alt="{{event.title}}" />
                        </div>
                        <div class="blog-detail_content">
                            <div class="blog-detail_author-outer d-flex align-items-center flex-wrap">
                                <div class="blog-detail-author d-flex align-items-center flex-wrap">
                                    <div class="blog-detail-author-image">
                                        <img src="/assets/images/resource/author-16.png" alt="" />
                                    </div>
                                    <i>By</i> {{event.pageAuthor}}
                                </div>
                                <ul class="blog-detail-meta d-flex align-items-center flex-wrap">
                                    <li><span class="icon fa-regular fa-calendar fa-fw"></span>{{event.pagePublishDate}}
                                    </li>
                                    <li><span class="icon fa-solid fa-users fa-fw"></span>{{event.ageGroup}}</li>
                                </ul>
                            </div>
                            <h3 class="blog-detail_heading">{{event.title}}</h3>

                            <div class="event-description">
                                {{{event.pageDetail}}}
                            </div>

                            <blockquote>
                                <i class="fa-solid fa-quote-left fa-fw"></i>
                                {{event.pageQuote}}
                                <div class="d-flex justify-content-end">
                                    <span>{{event.pageQuoteAuthor}}</span>
                                </div>
                            </blockquote>

                            <!-- Event Video Section -->
                            {{#if event.galleryImages}}
                            <div class="event-videos-section">
                                <h3>Event Highlights</h3>

                                {{#if event.videoUrl}}
                                <div class="video-box">
                                    <img src="{{event.imageUrl}}" alt="{{event.title}}"
                                        onerror="this.src='/assets/images/resource/blog-16.jpg'" />
                                    <a href="{{event.videoUrl}}" class="lightbox-video overlay-box"><span
                                            class="fa-solid fa-play fa-fw"><i class="ripple"></i></span></a>
                                </div>
                                {{else}}
                                <!-- Default Video Option -->
                                <div class="video-box">
                                    <img src="/assets/images/resource/blog-16.jpg" alt="" />
                                    <a href="https://www.youtube.com/watch?v=kxPCFljwJws"
                                        class="lightbox-video overlay-box"><span class="fa-solid fa-play fa-fw"><i
                                                class="ripple"></i></span></a>
                                </div>
                                {{/if}}

                                <!-- Additional Video Gallery Section -->
                                <div class="additional-videos mt-4">
                                    <h4>More Videos From This Event</h4>
                                    <div class="row mt-4">
                                        <!-- This section can be populated dynamically with more videos -->
                                        <div class="col-md-6 col-sm-12 mb-4">
                                            <div class="video-box">
                                                <img src="/assets/images/resource/event-video-1.jpg" alt=""
                                                    onerror="this.src='/assets/images/resource/program-2.jpg'" />
                                                <a href="https://www.youtube.com/watch?v=kxPCFljwJws"
                                                    class="lightbox-video overlay-box"><span
                                                        class="fa-solid fa-play fa-fw"><i class="ripple"></i></span></a>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-12 mb-4">
                                            <div class="video-box">
                                                <img src="/assets/images/resource/event-video-2.jpg" alt=""
                                                    onerror="this.src='/assets/images/resource/program-3.jpg'" />
                                                <a href="https://www.youtube.com/watch?v=kxPCFljwJws"
                                                    class="lightbox-video overlay-box"><span
                                                        class="fa-solid fa-play fa-fw"><i class="ripple"></i></span></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/if}}

                            <h3>Event Takeaways</h3>
                            <p>{{event.takeawaySummary}}</p>

                            <ul class="blog-detail_list">
                                <li><i class="fa-solid fa-check fa-fw"></i>{{event.takeawayFirst}}</li>
                                <li><i class="fa-solid fa-check fa-fw"></i>{{event.takeawaySecond}}</li>
                                <li><i class="fa-solid fa-check fa-fw"></i>{{event.takeawayThird}}</li>
                                <li><i class="fa-solid fa-check fa-fw"></i>{{event.takeawayFourth}}</li>
                            </ul>

                            <!-- Post Share Options-->
                            <div class="post-share-options">
                                <div class="post-share-inner d-flex justify-content-between flex-wrap">
                                    <div class="post-tags">
                                        {{#each (csvArray event.tags)}}
                                        <a href="#">{{this}}</a>
                                        {{/each}}
                                    </div>

                                </div>
                            </div>

                            <!-- Registration Info -->
                            <div class="registration-info mt-5 p-4"
                                style="background-color: #f9f9f9; border-radius: 10px;">
                                <h3>Join This Event</h3>
                                <p>Interested in participating? Fill out our registration form or contact us directly to
                                    secure your spot.</p>
                                <div class="text-center mt-4">
                                    <a href="/contact" class="theme-btn btn-style-one">
                                        <span class="btn-wrap">
                                            <span class="text-one">Register Now <i class="flaticon-next-1"></i></span>
                                            <span class="text-two">Register Now <i class="flaticon-next-1"></i></span>
                                        </span>
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar Side -->
            <div class="sidebar-side col-lg-4 col-md-12 col-sm-12">
                <aside class="sidebar">
                    <div class="sidebar-inner">

                        <!-- Event Details Widget -->
                        <div class="sidebar-widget event-details-widget">
                            <div class="widget-content">
                                <h5 class="sidebar-widget_title">Event Details</h5>
                                <ul class="event-details-list">
                                    <li>
                                        <i class="flaticon-calendar"></i>
                                        <strong>Date:</strong>
                                        <span>{{event.date}}</span>
                                    </li>
                                    <li>
                                        <i class="flaticon-clock"></i>
                                        <strong>No of Days:</strong>
                                        <span>{{event.noOfDays}}</span>
                                    </li>
                                    <li>
                                        <i class="flaticon-maps-and-flags"></i>
                                        <strong>Location:</strong>
                                        <span>{{event.location}}</span>
                                    </li>
                                    <li>
                                        <i class="flaticon-user"></i>
                                        <strong>Age Group:</strong>
                                        <span>{{event.ageGroup}}</span>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <!-- Other Events Widget -->
                        <div class="sidebar-widget post-widget">
                            <div class="widget-content">
                                <h5 class="sidebar-widget_title">Other Events</h5>

                                {{#each otherEvents}}
                                <div class="post">
                                    <div class="thumb"><a href="/event-detail?id={{this._id}}"><img
                                                src="{{this.imageUrl}}" alt="{{this.title}}"
                                                onerror="this.src='/assets/images/resource/post-thumb-1.jpg'"></a></div>
                                    <h6><a href="/event-detail?id={{this._id}}">{{this.title}}</a></h6>
                                    <ul class="post-meta">
                                        <li>{{formatDate this.date "D MMM"}}</li>
                                        <li>{{this.ageRange}}</li>
                                    </ul>
                                </div>
                                {{else}}
                                <!-- Default events if none from database -->
                                <div class="post">
                                    <div class="thumb"><a href="#"><img src="/assets/images/resource/post-thumb-1.jpg"
                                                alt=""></a></div>
                                    <h6><a href="#">Summer Camp Adventure</a></h6>
                                    <ul class="post-meta">
                                        <li>15 Jul</li>
                                        <li>5-12 years</li>
                                    </ul>
                                </div>

                                <div class="post">
                                    <div class="thumb"><a href="#"><img src="/assets/images/resource/post-thumb-2.jpg"
                                                alt=""></a></div>
                                    <h6><a href="#">Robotics Workshop</a></h6>
                                    <ul class="post-meta">
                                        <li>20 Aug</li>
                                        <li>8-14 years</li>
                                    </ul>
                                </div>

                                <div class="post">
                                    <div class="thumb"><a href="#"><img src="/assets/images/resource/post-thumb-3.jpg"
                                                alt=""></a></div>
                                    <h6><a href="#">Art and Creativity Festival</a></h6>
                                    <ul class="post-meta">
                                        <li>10 Sep</li>
                                        <li>4-16 years</li>
                                    </ul>
                                </div>
                                {{/each}}
                            </div>
                        </div>

                        <!-- Contact Widget -->
                        <div class="blog-contact-widget"
                            style="background-image:url(/assets/images/resource/contact-widget_bg.jpg)">
                            <div class="blog-contact-widget_icon">
                                <i class="flaticon-phone-call"></i>
                            </div>
                            <div class="title">Free Call</div>
                            <a class="blog-contact-widget_phone" href="tel:+02-908-480-20">02 (908) 480-20</a> <br>
                            <a class="blog-contact-widget_contact" href="/contact">Contact Us<i
                                    class="fa-solid fa-angle-right fa-fw"></i></a>
                        </div>

                    </div>
                </aside>
            </div>

        </div>
    </div>
</div>
<!-- End Sidebar Page Container -->