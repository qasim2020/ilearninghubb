                    <div class="registration-form-outer">
                        <h3 class="registration-form-title">Bootcamp Registration</h3>

                        <!-- Registration Form -->
                        <div class="default-form registration-form">
                            <form method="post" action="/register">
                                <div class="row clearfix">
                                    <!-- Child Information -->
                                    <div class="col-12 mb-4">
                                        <h4 class="form-section-title">Child Information</h4>
                                    </div>
                                    
                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        <label>Child's First Name*</label>
                                        <input type="text" name="childFirstName" placeholder="" required="" />
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        <label>Child's Last Name*</label>
                                        <input type="text" name="childLastName" placeholder="" required="" />
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        <label>Age*</label>
                                        <select name="age" class="custom-select-box" required>
                                            <option value="">Select Age</option>
                                            <option value="5-7">5-7 years</option>
                                            <option value="8-10">8-10 years</option>
                                            <option value="11-13">11-13 years</option>
                                            <option value="14-16">14-16 years</option>
                                        </select>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        <label>Gender</label>
                                        <select name="gender" class="custom-select-box">
                                            <option value="">Select Gender</option>
                                            <option value="male">Male</option>
                                            <option value="female">Female</option>
                                            <option value="other">Other</option>
                                            <option value="prefer-not">Prefer not to say</option>
                                        </select>
                                    </div>

                                    <!-- Parent/Guardian Information -->
                                    <div class="col-12 mb-4 mt-4">
                                        <h4 class="form-section-title">Parent/Guardian Information</h4>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        <label>First Name*</label>
                                        <input type="text" name="parentFirstName" placeholder="" required="" />
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        <label>Last Name*</label>
                                        <input type="text" name="parentLastName" placeholder="" required="" />
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        <label>Email Address*</label>
                                        <input type="email" name="email" placeholder="" required="" />
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        <label>Phone Number*</label>
                                        <input type="tel" name="phone" placeholder="" required="" />
                                    </div>

                                    <!-- Additional Information -->
                                    <div class="col-12 mb-4 mt-4">
                                        <h4 class="form-section-title">Additional Information</h4>
                                    </div>

                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                        <label>Does your child have any medical conditions or allergies?</label>
                                        <select name="medicalConditions" class="custom-select-box">
                                            <option value="no">No</option>
                                            <option value="yes">Yes</option>
                                        </select>
                                    </div>

                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                        <label>If yes, please provide details:</label>
                                        <textarea name="medicalDetails" placeholder=""></textarea>
                                    </div>

                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                        <label>Any additional information we should know?</label>
                                        <textarea name="additionalInfo" placeholder=""></textarea>
                                    </div>

                                    <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                        <button type="submit" class="theme-btn btn-style-one">
                                            <span class="btn-wrap">
                                                <span class="text-one">Submit Registration
                                                    <i class="flaticon-next-1"></i></span>
                                                <span class="text-two">Submit Registration
                                                    <i class="flaticon-next-1"></i></span>
                                            </span>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
