<section class="page-title"
    style="background-image: url({{#if program.imageUrlResolved}}{{program.imageUrlResolved}}{{else}}/assets/images/background/pricing-bg.jpg{{/if}});">
    <div class="auto-container">
        <h1 style="color: #ffffff;">{{program.title}}</h1>
        <ul class="page-breadcrumb">
            <li><a href="/">Home</a></li>
            <li>Program</li>
        </ul>
    </div>
</section>

<section class="program-detail" style="padding-top: 60px; padding-bottom: 60px;">
    <div class="auto-container">
        <div class="row clearfix">
            <div class="col-lg-8 col-md-12 col-sm-12">
                <div class="program-detail_content">
                    {{#if program.excerpt}}
                    <p class="lead" style="margin-bottom: 18px;">{{program.excerpt}}</p>
                    {{/if}}

                    <div>
                        {{{program.description}}}
                    </div>

                </div>
            </div>

            <div class="col-lg-4 col-md-12 col-sm-12">
                <aside class="program-gallery-sidebar">


                    <div class="widget" style="margin-top:18px; padding-bottom:8px;">
                        <h5 style="margin-bottom:12px;">Details</h5>
                        <ul class="list-unstyled" style="line-height:1.6;">
                            {{#if program.duration}}
                            <li style="margin-bottom:8px;"><strong>Duration:</strong> {{program.duration}}</li>
                            {{/if}}
                            {{#if program.ageRange}}
                            <li style="margin-bottom:8px;"><strong>Age Range:</strong> {{program.ageRange}}</li>
                            {{/if}}
                            {{#if program.gender}}
                            <li style="margin-bottom:8px;"><strong>Gender:</strong> {{program.gender}}</li>
                            {{/if}}
                        </ul>
                    </div>

                    <div class="widget">
                        <h5>Gallery</h5>
                        {{#if program.gallery.length}}
                        <div class="gallery-grid"
                            style="display:grid; grid-template-columns: repeat(2, 1fr); gap:12px; margin-top:12px;">
                            {{#each program.gallery}}
                            <div style="width:100%; height:150px; overflow:hidden; border-radius:8px;">
                                <a href="{{this.urlResolved}}" class="lightbox-image">
                                    <img src="{{this.urlResolved}}" alt=""
                                        style="width:100%; height:100%; object-fit:cover;"
                                        onerror="this.src='/assets/images/resource/program-1.jpg'" />
                                </a>
                            </div>
                            {{/each}}
                        </div>
                        {{else}}
                        <div style="margin-top:12px;">No gallery images available.</div>
                        {{/if}}
                    </div>

                    <div class="widget" style="margin-top:18px;">
                        {{#if otherPrograms.length}}
                        <div style="margin-top:40px;">
                            <h4>Other Programs</h4>
                            <div class="row" style="margin-top:12px; gap:12px;">
                                {{#each otherPrograms}}
                                <div class="col-12" style="margin-bottom:16px;">
                                    <div class="program-card"
                                        style="border:1px solid #eee; padding:12px; border-radius:8px; display:flex; gap:12px; align-items:center;">
                                        <div
                                            style="width:100px; flex:0 0 100px; height:70px; overflow:hidden; border-radius:6px;">
                                            <a href="/program/{{this._id}}"><img
                                                    src="{{#if this.imageUrlResolved}}{{this.imageUrlResolved}}{{else}}/assets/images/resource/program-1.jpg{{/if}}"
                                                    alt="{{this.title}}"
                                                    style="width:100%; height:100%; object-fit:cover;" /></a>
                                        </div>
                                        <div style="flex:1;">
                                            <h5 style="margin:0 0 6px 0;"><a
                                                    href="/program/{{this._id}}">{{this.title}}</a></h5>
                                            <div style="font-size:13px; color:#666;">{{this.descriptionText}}</div>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                        {{/if}}
                    </div>

                </aside>
            </div>
        </div>
    </div>
</section>