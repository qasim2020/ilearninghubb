<header class="main-header header-style-one">
    <div class="header-lower">
        <div class="auto-container">
            <div class="inner-container">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div class="nav-outer d-flex align-items-center flex-wrap">
                        <div class="logo-box">
                            <div class="logo"><a href="/"><img 
                                    src="assets/images/logo-11.png" 
                                    alt="iLearningHubb Logo" 
                                    title="iLearningHubb"
                                    class="responsive-logo" 
                                    /></a></div>
                        </div>
                        <nav class="main-menu navbar-expand-md">
                            <div class="navbar-header">
                                <button class="navbar-toggler" type="button" data-toggle="collapse"
                                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>

                            <div class="navbar-collapse collapse clearfix" id="navbarSupportedContent">
                                <ul class="navigation clearfix">
                                    <li><a href="about.html">Home</a></li>
                                    <li><a href="about.html">About us</a></li>
                                    <li class="dropdown"><a href="#">Past Events</a>
                                        <ul>
                                            {{#each pastEvents}}
                                            <li><a href="/event/{{this.slug}}.html">{{this.name}}</a></li>
                                            {{/each}}
                                        </ul>
                                    </li>
                                    <li class="dropdown"><a href="#">Upcoming Events</a>
                                        <ul>
                                            {{#each pastEvents}}
                                            <li><a href="/event/{{this.slug}}.html">{{this.name}}</a></li>
                                            {{/each}}
                                        </ul>
                                    </li>
                                    <li class="dropdown"><a href="#">Blog Posts</a>
                                        <ul>
                                            {{#each blogPosts}}
                                            <li><a href="/blog/{{this.slug}}">{{this.name}}</a></li>
                                            {{/each}}
                                        </ul>
                                    </li>
                                    <li><a href="/contact.html">Contact</a></li>
                                </ul>
                            </div>
                        </nav>
                    </div>

                    <div class="outer-box d-flex align-items-center flex-wrap">
                        <div class="header-phone_box">
                            <a href="tel:+{{data.settings.brandMobile}}"><i class="flaticon-call"></i> {{data.settings.brandMobile}}</a>
                        </div>

                        <!-- Button Box -->
                        <div class="main-header_button">
                            <a href="{{data.siginURL}}" class="theme-btn btn-style-one">
                                <span class="btn-wrap">
                                    <span class="text-one">Login Now</span>
                                    <span class="text-two">Login Now</span>
                                </span>
                            </a>
                        </div>

                        <!-- About Widget -->
                        <span class="about-widget">
                            <span class="hamburger">
                                <span class="top-bun"></span>
                                <span class="meat"></span>
                            </span>
                        </span>

                        <!-- Mobile Navigation Toggler -->
                        <div class="mobile-nav-toggler"><span class="icon flaticon-menu"></span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--End Header Lower-->

    <!-- Mobile Menu  -->
    <div class="mobile-menu">
        <div class="menu-backdrop"></div>
        <div class="close-btn"><span class="icon flaticon-close"></span></div>

        <nav class="menu-box">
            <div class="nav-logo"><a href="/"><img 
                src="assets/images/logo-11.png" 
                alt="iLearningHubb Logo" 
                title="iLearningHubb"
                class="responsive-mobile-logo" /></a>
            </div>
            <div class="menu-outer">
                <!--Here Menu Will Come Automatically Via Javascript / Same Menu as in Header-->
            </div>
        </nav>
    </div>
    <!-- End Mobile Menu -->
</header>
<!-- End Main Header -->

<!-- Add responsive logo styles -->
<style>
.responsive-logo {
    max-width: 90px;
    height: auto;
    display: block;
}

.responsive-mobile-logo {
    max-width: 80px;
    height: auto;
    display: block;
    margin: 0 auto;
}

/* Responsive breakpoints */
@media (max-width: 1200px) {
    .responsive-logo {
        max-width: 85px;
    }
}

@media (max-width: 991px) {
    .responsive-logo {
        max-width: 80px;
    }
}

@media (max-width: 767px) {
    .responsive-logo {
        max-width: 70px;
    }
}

@media (max-width: 480px) {
    .responsive-logo {
        max-width: 60px;
    }
    
    .responsive-mobile-logo {
        max-width: 70px;
    }
}
</style>